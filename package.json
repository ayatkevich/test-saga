{
  "name": "test-saga",
  "description": "A bunch of helpers to make redux-saga testing more powerful.",
  "main": "unit/index.js",
  "scripts": {
    "build": "rimraf unit && babel -D src -d .",
    "lint": "xo",
    "test": "node --harmony node_modules/.bin/ava",
    "test:build": "yarn run test -- 'unit/**/*.spec.js'",
    "coverage": "nyc yarn run test && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "commit": "yarn run coverage && git cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "unit"
  ],
  "repository": {
    "url": "https://github.com/ayatkevich/test-saga.git",
    "type": "git"
  },
  "keywords": [
    "redux-saga",
    "tdd",
    "test",
    "unit",
    "redux"
  ],
  "author": "Alexander Yatkevich (ayatkevich@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ayatkevich/test-saga/issues"
  },
  "homepage": "https://github.com/ayatkevich/test-saga",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "src/**/*.spec.js"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.spec.js",
      "examples/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "node",
      "es6"
    ],
    "esnext": true,
    "extends": [],
    "plugins": [
      "babel"
    ],
    "space": true,
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "max-len": [
        "error",
        80
      ]
    },
    "ignores": [
      "unit/**/*"
    ]
  },
  "dependencies": {
    "ramda": "^0.22.1"
  },
  "devDependencies": {
    "action-helper": "^1.1.0",
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "commitizen": "^2.8.6",
    "cross-env": "^3.1.3",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.9.1",
    "eslint-config-xo": "^0.17.0",
    "eslint-plugin-babel": "^3.3.0",
    "lockr": "^0.8.4",
    "nyc": "^8.4.0",
    "redux-saga": "^0.12.1",
    "rimraf": "^2.5.4",
    "semantic-release": "^4.3.5",
    "xo": "^0.17.0"
  },
  "peerDependencies": {
    "redux-saga": "^0.12.1"
  }
}
